	<bean id="transactionManager" 
		class="org.springframework.transaction.jta.JtaTransactionManager"/>
	
	<!--
	==========================================================================
									JMS 
	==========================================================================
	-->
	<jee:jndi-lookup id="connectionFactory" jndi-name="jms/orderProcessorConnectionFactory"/>
	
	<bean id="ordersConsumer" class="com.originatelabs.example.jms.OrdersConsumer"/>
	
	
	<jms:listener-container transaction-manager="transactionManager">
		<jms:listener destination="orders.input" ref="ordersConsumer" method="handleMessage"/>
	</jms:listener-container>
	
